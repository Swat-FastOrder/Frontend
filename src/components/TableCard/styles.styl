@import '../../stylus/variables.styl'


.tableCard
  width: 100%
  height: 100px
  border-radius: 5px
  background-color: basicColor1
  border-radius: 5px
  color: color6
  padding: 5px
  box-sizing: border-box
  cursor: pointer
  text-decoration: none
  .arrow
    align-self: flex-end
    margin-bottom: 10%
    font-size: 2.2rem
    color: basicColor1
    cursor: pointer
  &--Title
    font-size: 1.5rem
    font-weight: 700
    text-transform: capitalize
  &--State
    font-size: 1rem
    font-weight: 400
    position: relative
    top: 35px

.occupied
  background-color: colorGreen
  color: basicColor1