@import '../../stylus/variables.styl'

.orderDetails
  width: 100%
  height: "calc(100vh - %s)" % headerHeight
  display: flex
  flex-direction: column
  align-items: center
  background-color: rgba(38, 44, 54, .9)
  text-align: center
  position: sticky
  top: headerHeight
  span
    font-size: 1.3rem
    color: darkgray
    font-weight: bold
  h2
    font-size: 1.5rem
    color: basicColor1
  img
    margin-top: 10%
    width: 60%
  &__waiter
    margin-top: 20%
  &__table
    margin-top: 10%
  .button
    width: 55%
    height: 35px
    margin-top: 20%
    border: none
    border-radius: 20px
    background-color: colorRedDark
    color: basicColor1
    font-size: 1.5rem
    font-weight: bold
    text-decoration: none

@media screen and (min-width: 423px)
  .orderDetails
    img
      width: 40%
    &__waiter
      margin-top: 10%
    &__table
      margin-top: 10%
    button
      width: 40%
      height: 6%
      margin-top: 12%
      border-radius: 20px
      font-size: 1.5rem

@media screen and (min-width: 760px)
  .orderDetails
    background-color: color8
    span
      font-size: 1rem
    h2
      font-size: 1.5rem
    img
      width: 60%
    &__waiter
      margin-top: 30%
    &__table
      margin-top: 20%
    button
      width: 60%
      height: 6%
      margin-top: 30%
      border-radius: 20px
      font-size: 1.3rem

@media screen and (min-width: 1020px)
  .orderDetails
    &__waiter
      margin-top: 18%
    &__table
      margin-top: 15%
    button
      margin-top: 30%
