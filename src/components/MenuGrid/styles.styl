.MenuGrid
  height: 100%
  display: grid
  margin: 5% 0
  grid-template-columns: repeat(2, 45%)
  grid-gap: 2%
  justify-content: center

@media screen and (min-width: 760px)
  .MenuGrid
    margin: 20px 0
    padding: 0 5% 0 5%
    grid-template-columns: repeat(4, 25%)

@media screen and (min-width: 1400px)
  .MenuGrid
    padding: 0 9% 0 9%