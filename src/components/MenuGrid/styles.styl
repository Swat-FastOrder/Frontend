.MenuGrid
  height: 100%
  display: grid
  grid-template-columns: repeat(2, 45%)
  grid-gap: 1% 2%
  justify-content: center
  overflow-y: scroll
  box-sizing: border-box;

@media screen and (min-width: 760px)
  .MenuGrid
    padding: 15px 5%
    grid-template-columns: repeat(4, 25%)
@media screen and (min-width: 1020px)
