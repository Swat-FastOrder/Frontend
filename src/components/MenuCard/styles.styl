@import '../../stylus/variables.styl'

.menuCard
  width: 100%
  height: 100%
  border-radius: 5px
  &__container
    width: 100%
    height: 100%
    position: relative
    border-radius: 5px
    overflow: hidden
    img
      width: 100%
      height: 100%
      position:absolute
      border-radius: 5px
      object-fit: cover
      &:hover
        cursor: pointer
        opacity: .8
    &--text
      width: 100%
      height:30%
      background-color:rgba(32, 68, 112, .7)
      position: absolute
      bottom: 0
      display: flex
      flex-direction: column
      justify-content: center
      padding: 0 10%
      line-height: 1.7
      box-sizing: border-box
      &Title
        font-size: .8rem
        font-weight: 400
        color: basicColor1
        line-height: 1.3rem
      &Price
        font-size: .9rem
        font-weight: 600
        color: basicColor1


@media screen and (min-width: 423px)
  .menuCard
    height: 100%

@media screen and (min-width: 760px)
  .menuCard
    height: 100%

@media screen and (min-width: 1020px)
  .menuCard
    height: 100%
    &__container
      &--text
        &Title
          font-size: .8rem
        &Price
          font-size: 1rem

@media screen and (min-width: 1400px)
  .menuCard
    width: minmax(150px, 250px)
    height: 100%
    &__container
      &--text
        &Title
          font-size: 1.3rem
        &Price
          font-size: 1.5rem