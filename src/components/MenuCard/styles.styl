@import '../../stylus/variables.styl'

.menuCard
  width: 100%
  height: 280px
  display: inline-block
  border-radius: 20px
  &__container
    width: 100%
    height: 100%
    position: relative
    z-index: 2
    background-color:rgba(80, 133, 173, .8)
    border-radius: 20px
    overflow: hidden
    img
      width: 100%
      height: 100%
      opacity: .6
      border-radius: 20px
      object-fit: cover
      &:hover
        cursor: pointer
        opacity: .8
        // transition: .3s;

    &--text
      z-index: 3
      position: absolute
      bottom: 8%
      left: 10%
      line-height: 1.3
      &Title
        font-size: 1.5rem
        font-weight: 400
        color: basicColor1
      &Price
        font-size: 1.5rem
        font-weight: 600
        color: basicColor1
