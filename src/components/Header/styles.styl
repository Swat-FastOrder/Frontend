@import '../../stylus/variables.styl'

.header
  width: 100%
  height: 100px
  display: flex
  justify-content: space-between
  align-items: center
  position: sticky
  z-index: 14
  top: 0
  background-color: color3
  &__left
    margin-left: 1.5%
    h1
      font-weight: 400
      font-size: 3rem
      strong
        font-size: 1em
  &__right
    display: flex
    margin-right: 1em
    i
      font-size: 38px
      color: white
    &--basket
      i
        font-size: 40px
        margin: 0 40px 0 40px
    &--more
      display: none
