@import '../../stylus/variables.styl'

.header
  width: 100%
  height: 80px
  display: flex
  justify-content: space-between
  align-items: center
  position: sticky
  z-index: 14
  top: 0
  background-color: color3
  &__left
    margin-left: 4%
    h1
      font-weight: 400
      font-size: 2.2rem
      strong
        font-size: 1em
  &__right
    display: flex
    align-items: center
    margin-right: 1em
    i
      font-size: 38px
      color: white
    &--grid
      display: none
    &--basket
      display: none
      i
        font-size: 40px
        margin: 0 40px 0 40px
    &--more
      visibility: visible
      i
        font-size: 65px

@media screen and (min-width: 760px)
  .header
    &__left
      margin-left: 2%
      h1
        font-weight: 400
        font-size: 2.5rem
        strong
          font-size: 1em
    &__right
      &--grid
        display: block
      &--basket
        display: block
        i
          margin: 0 10px 0 40px
      &--more
        display none