@import '../../stylus/variables.styl'

.itemDetails
  width: 30%
  height: 100%
  // display: none
  position fixed
  z-index: 11
  right: 0
  top: 10%
  background-color: color2
  text-align: center
  &__image
    margin-top: 3%
    height: 28%
    position: relative
    z-index: 2
    img
      width: 90%
      height: 100%
      object-fit: cover
    i
      font-size: 3rem
      position: absolute
      z-index: 3
      top: 5%
      left: 10%
      color: color4
      background-color: basicColor1
      border-radius: 50%

