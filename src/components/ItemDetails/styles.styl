@import '../../stylus/variables.styl'

.itemDetails
  width: 100%
  height: 100%
  position fixed
  z-index: 11
  right: 0
  top: 10%
  background-color: rgba(38, 44, 54, .9)
  display: flex
  flex-direction: column
  align-items: center
  // display: none
  &__image
    margin-top: 5%
    height: 28%
    width: 90%
    position: relative
    z-index: 2
    img
      width: 100%
      height: 100%
      object-fit: cover
    i
      font-size: 2rem
      position: absolute
      z-index: 3
      top: 4%
      left: 2%
      color: color4
      background-color: basicColor1
      border-radius: 50%
  &__title
    margin-top: 2%
    width: 80%
    font-size: 1.3rem
    font-weight: 400
    color: basicColor1
  &__subtitle
    width: 80%
    display: flex
    justify-content: space-between
    align-items: center
    &--details
      p
        font-size: 1.1rem
        font-weight: 400
        color: basicColor1
    &--price
      h3
        font-size: 1.1rem
        font-weight: 900
        color: basicColor1
  span
    margin-top: 5%
    margin-bottom: 2%
    width: 80%
    font-size: 1rem
    font-weight: 900
    color: gray
  &__extras
    width: 80%
    height: 150px
    display: grid
    grid-template-columns: 1fr
    grid-row-gap: 5px
    overflow-y: auto
    p
      font-size: 1rem
      font-weight: 900
      color: basicColor1
    &--line
      display: flex
      justify-content: space-between
      align-items: center
      &Left
        display: flex
        align-items: center
        p
          font-size: 1rem
          font-weight: 900
          color: basicColor1
        .checkbox
          transform: scale(1.5)
          margin-left: 5px
          margin-right: 15px
  &__inputText
    margin-top: 10px
    margin-bottom: 3%
    width: 75%
    height: 15%
    border: none
    border-radius: 30px
    font-size: 1rem
    font-weight: 900
    color: gray
    background-color: color1
    text-align: justify
  &__addOrder
    width: 50%
    height: 6%
    border-radius: 20px
    border: none
    color: basicColor1
    font-size: 1.3rem
    font-weight: 900
    background-color: color6

@media screen and (min-width: 423px)
  .itemDetails
    span
      margin-top: 15px
      margin-bottom: 8px

@media screen and (min-width: 760px)
  .itemDetails
    width: 30%
    background-color: color2

@media screen and (min-width: 1020px)
  .itemDetails
    width: 30%
    &__image
      i
        font-size: 2.2rem
    &__title
      font-size: 1.5rem
    &__inputText
      margin-top: 5%
      margin-bottom: 8%
      height: 13%
