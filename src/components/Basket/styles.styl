@import '../../stylus/variables.styl'

.basket
  width: 100%
  height: 100%
  background-color: color8
  display: flex
  flex-direction: column
  align-items: center
  i
    align-self: flex-start
    margin: 6% 0 5% 6%
    font-size: 2.2rem
    color: basicColor1
  &Container
    width: 80%
    max-height: 50%
    margin-top: 10%
    display: grid
    grid-template-columns: 1fr
    overflow: auto
  &__send
    width: 40%
    height: 6%
    margin-top: 15%
    border-radius: 20px
    border: none
    color: basicColor1
    font-size: 1.3rem
    font-weight: 900
    background-color: colorGreen
    cursor: pointer
  &__message
    text-align: center
    color: basicColor1
    font-size: 2rem

@media screen and (min-width: 760px)
  .basket
    &__send
      width: 60%
      height: 6%
      margin-top: 15%
@media screen and (min-width: 1020px)
  .basket
    &__send
      width: 50%
      height: 6%
      margin-top: 15%