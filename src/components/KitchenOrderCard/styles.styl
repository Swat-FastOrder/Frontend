@import '../../stylus/variables.styl'

.orderCard
  min-height: 120px
  background-color: basicColor1
  border-radius: 5px
  position: relative
  display: flex
  flex-direction: column
  &__table
    position relative
    flex: 0 0 auto
    height: 120px
    color: basicColor1
    display: flex
    align-items: center
    padding: 0 25px
    h1
      font-weight: 400
      font-size: 2.3rem
  &__list
    position relative
    flex: 1 1 auto
    height: 100%
    &--item
      display: flex
      padding: 5%
      &Quantity
        margin-right: 20px



.redStat
  background-color: colorRed
.yellowStat
  background-color: colorYellow
.greenStat
  background-color: colorGreen