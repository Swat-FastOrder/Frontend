@import '../../stylus/variables.styl'

.text-muted
  color: lightgray;

.redStat
  background-color: colorRed
.yellowStat
  background-color: colorYellow
.greenStat
  background-color: colorGreen

.orderCard
  width: 100%
  height: auto
  background-color: basicColor1
  border-radius: 5px
  display: flex
  flex-direction: column
  &__table
    height: 60px
    color: basicColor1
    display: flex
    align-items: center
    padding: 0 1.5625rem
    h1
      font-weight: 400
      font-size: 1.8rem
  &__list
    height: 100%
    padding: 8px
    &--item
      display: flex
      justify-content: space-between
      align-items: center
      position: relative
      text-transform: lowercase
      min-height: 1.875rem
      border-bottom: 1px dashed color8
      padding: 0.375rem 0
      &:last-of-type
        border-bottom: none
      h3
        font-size: 1.1rem
        font-weight: 400
        color: color1
      &Quantity
        margin-right: 10px

  &__icon
    align-self: flex-end
    padding: 10px 20px 20px 0
    i
      font-size: 3rem
      color: color3

@media screen and (min-width: 1400px)
  .orderCard
    &__table
      height: 100px
      h1
        font-size: 2.3rem
    &__list
      &--item
        h3
          font-size: 1.3rem
    &__icon
      i
        font-size: 3.5rem