@import '../../stylus/variables.styl'

.basketItem
  min-height: 100px
  display: grid
  grid-template-columns: 1.5fr 2.3fr .7fr
  grid-template-rows: 28% 10% 1fr
  margin-bottom: 10px
  border: dashed 3px gray
  border-radius: 10px
  color: white
  &__image
    display: flex
    justify-content: center
    align-items: center
    grid-row: 1 / 4
    img
      width: 80%
      height: 80%
      object-fit: cover
  &__details
    grid-column: 2 / 3
    grid-row: 1 / 4
    h2
      font-size: 1.5rem
      font-weight: 400
      margin-bottom: 5%
    span
      font-size: 1.2rem
      font-weight: 500
  &__price
    grid-column: 3 / 4
    grid-row: 2 / 3
    font-size: 1.2rem
    font-weight: 900
    margin-top: 5%
