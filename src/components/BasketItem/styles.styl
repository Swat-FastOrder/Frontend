@import '../../stylus/variables.styl'

.basketItem
  min-height: 80px
  display: grid
  grid-template-columns: 1.5fr 2.3fr .7fr
  grid-template-rows: 28% 10% 1fr
  margin-bottom: 10px
  border: dashed 3px basicColor1
  border-radius: 10px
  color: basicColor1
  &__image
    display: flex
    justify-content: center
    align-items: center
    grid-row: 1 / 4
    img
      width: 80%
      height: 80%
      border-radius: 5px
      object-fit: cover
  &__details
    grid-column: 2 / 3
    grid-row: 1 / 4
    h2
      font-size: 1.1rem
      font-weight: 400
      margin-bottom: 5%
    span
      font-size: 1rem
      font-weight: 500
  &__price
    grid-column: 3 / 4
    grid-row: 2 / 3
    font-size: 1rem
    font-weight: 900
    margin-top: 5%
    margin-right: 4px
