@import '../../stylus/variables.styl'

.menuCategories
  width: 100%
  height: 100%
  background-color: color2
  text-align: center
  div
    display: flex
    flex-direction: column
    justify-content: center
    height: 10%
    &:hover
      background-color: color1
    i
      font-size: 35px
      color: color4
    h1
      color: basicColor1
      font-size: 1rem

@media screen and (min-width: 1020px)
  .menuCategories
    div
      height: 11%
      i
        font-size: 40px
      h1
        font-size: 1.3rem
@media screen and (min-width: 1400px)
  .menuCategories
    div
      height: 12%
      i
        font-size: 65px
      h1
        font-size: 2rem