@import '../../stylus/variables.styl'

.formRight
  height: 100%
  width: 100%
  box-sizing: border-box
  padding-bottom: 30%
  display: flex
  flex-direction: column
  align-items: center
  justify-content: center
  i
    position: absolute
    top: 20px
    left: 20px
    font-size: 2.2rem
    color: basicColor1
    cursor:pointer
  &__container
    width: 90%
    text-align: center
    &--title
      color: basicColor1
      font-size: 2rem
    &--input
      margin-top: 30%
      margin-bottom: 30%
      padding: 0 10px
      width: 200px
      height: 30px
      border: none
      border-radius: 5px
      font-size: .9rem
      font-weight: 900
      color: basicColor1
      background-color: color6
      text-align: justify
    &--submit
      width: 50%
      height: 40px
      border-radius: 20px
      border: none
      color: basicColor1
      font-size: 1.1rem
      font-weight: 900
      background-color: colorGreen