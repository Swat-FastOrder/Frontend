@import '../../stylus/variables.styl'

.LanguageButton
  padding: 5px
  border: none
  background: color4
  color: white
  box-sizing: border-box
  width: 30px
  height: 30px
  margin-right: 10px
  cursor: pointer
  font-size: .8rem

  &:hover
    background: color6

@media screen and (min-width: 760px)
  .LanguageButton
    margin-right: 40px

@media screen and (min-width: 1400px)
  .LanguageButton
    padding: 5px
    border: none
    background: color4
    color: white
    box-sizing: border-box
    width: 40px
    height: 40px
    margin-right: 10px
    cursor: pointer
    font-size: 1.3rem

    &:hover
      background: color6