@import '../../stylus/variables.styl'

.PeopleCard
  width: 100%
  height: 100%
  &__container
    max-width: 100%
    max-height: 50px
    border-radius: 50%
    overflow: hidden
    img
      width: 100%
      max-height: 50px
      object-fit: cover

  &:hover
    cursor: pointer
    opacity: .8
    transition: .4s

