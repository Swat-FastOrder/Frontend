@import '../../stylus/variables.styl'

.PeopleCard
  width: 100%
  height: 100%
  &__container
    width: 100%
    height: 100%
    border-radius: 50%
    overflow: hidden
    img
      width: 100%
      height: 100%
      object-fit: cover

  &:hover
    cursor: pointer
    opacity: .8
    transition: .4s