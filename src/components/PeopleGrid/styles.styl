@import '../../stylus/variables.styl'

.Profile
  display: flex
  flex-direction: column
  &__Title
    padding: 2% 0 0 5%
    color: color8
    font-family: Font1
    font-size: 2em
  &__ChefGrid
  &__WaiterGrid
    padding: 20px
    display: grid
    grid-template-columns: repeat(auto-fill, 50px)
    grid-auto-rows: 50px
    grid-gap: 8px
  &--add
    width: 100%
    height: 100%
    background-color: Background
    border-radius 50%
    border: 8px solid colorGreen
  .fa-plus
    align-self: center
    justify-self: center
    font-size: 40px
    color: colorGreen


@media screen and (min-width: 760px)
  .Profile
    &__ChefGrid
    &__WaiterGrid
      grid-template-columns: repeat(auto-fill, 80px)
      grid-auto-rows: 80px

@media screen and (min-width: 1020px)
  .Profile
    &__ChefGrid
    &__WaiterGrid
      grid-template-columns: repeat(auto-fill, 90px)
      grid-auto-rows: 90px

@media screen and (min-width: 1400px)
  .Profile
    flex-direction: column
    &__ChefGrid
    &__WaiterGrid
      grid-template-columns: repeat(auto-fill, 120px)
      grid-auto-rows: 120px

