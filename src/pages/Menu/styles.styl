.menu
  &__container
    width: 100%
    height: 100%
    position: fixed
    display: flex
    &--left
      display: none
      width: 10%
      height: 100vh
      position: relative
      z-index: 1
    &--center
      // display: none
      position: relative
      z-index: 1
      height: 90%
      width: 100%
      overflow-y: auto
    &--right
      // display: none
      width: 100%
      height: 100%
      position: fixed
      z-index: 5

@media screen and (min-width: 760px)
  .menu
    &__container
      width: 100%
      height: 100%
      position: fixed
      display: flex
      &--left
        display: block
        width: 10%
        height: 100vh
        position: relative
        z-index: 1
      &--center
        position: relative
        width: 60%
        overflow-y: auto
      &--right
        display: block
        width: 30%
        position: relative
        z-index: 1