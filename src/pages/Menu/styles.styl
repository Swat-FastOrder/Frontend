@import '../../stylus/variables.styl'

body
  background-color: color1
  width: 100%

.menu
  &__container
    width: 100%
    height: 100%
    position: fixed
    display: flex
    &--left
      width: 10%
      height: 100vh
      position: relative
      z-index: 1
    &--center
      position: relative
      height: 91%
      width: 60%
      overflow-y: auto
    &--right
      width: 30%
      height: 100vh
      position: relative
      z-index: 1
      display: flex
      flex-direction: column
      align-items: center
      background-color: color2
      text-align: center
      span
        font-size: 1.5rem
        color: gray
        font-weight: bold
      h2
        font-size: 2rem
        color: white
      img
        margin-top: 10%
        width: 60%
      &Waiter
        margin-top: 20%
      &Table
        margin-top: 10%
      button
        width: 40%
        height: 6%
        margin-top: 20%
        border: none
        border-radius: 20px
        background-color: color5
        color: white
        font-size: 1.8rem
        font-weight: bold