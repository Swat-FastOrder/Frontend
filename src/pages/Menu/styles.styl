@import '../../stylus/variables.styl'

.menu
  &__container
    width: 100%
    height: 100%
    position: fixed
    display: flex
    &--left
      width: 10%
      height: 100vh
      position: relative
      z-index: 1
      background-color: color2
      text-align: center
      div
        display: flex
        flex-direction: column
        justify-content: center
        height: 12%
        padding: 0 2% 0 2%
        &:hover
          background-color: color1
        i
          font-size: 50px
          color: color3
        h1
          color: white
          font-size: 2rem
    &--center
      position: relative
      height: 91%
      width: 60%
      overflow-y: auto
    &--right
      width: 30%
      height: 100vh
      position: relative
      z-index: 1
      display: flex
      flex-direction: column
      align-items: center
      background-color: color2
      text-align: center
      span
        font-size: 1.5rem
        color: gray
        font-weight: bold
      h2
        font-size: 2rem
        color: white
      img
        margin-top: 10%
        width: 60%
      &Waiter
        margin-top: 20%
      &Table
        margin-top: 10%
      button
        width: 40%
        height: 6%
        margin-top: 30%
        border: none
        border-radius: 20px
        background-color: color5
        color: white
        font-size: 1.8rem
        font-weight: bold