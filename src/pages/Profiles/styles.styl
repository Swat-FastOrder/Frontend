@import '../../stylus/variables.styl'

body
  background-color: color1
  width: 100%

.profile
  &__container
    width: 100%
    height: 100%
    position: fixed
    display: flex
    &--left
      width: 10%
      height: 100vh
      position: relative
      z-index: 1
    &--center
      position: relative
      height: 91%
      width: 60%
      overflow-y: auto
    &--right
      width: 30%
      height: 100vh
      position: relative
      z-index: 1
