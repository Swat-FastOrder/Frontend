
.login
  background-image: url("../../assets/Rectangulo_44.png")
  width: 100%
  height: 100vh
  display: flex
  justify-content: center
  font-family: Font1
  &__home
    align-self: center
    background: basicColor1
    padding: 30px 10px
    height: 60%
    width: 250px
    border-radius: 20px
    display: flex
    flex-direction: column
    justify-content: space-evenly
    align-items: center
    flex-wrap: wrap
    &--up
      margin: 0
      height: auto
      align-self: center
      font-size: 20px
      .a
        text-align: center
      .b
        padding: 7px
        font-size: inherit
        border-radius: 27px
        background: color4
        display: inline-flex
        letter-spacing: 1px
        .b_1
          font-weight: 100
          font-style: italic
        .b_2
          color: basicColor1
          text-transform: uppercase
    .login__down
      height: 170px
      display: flex
      flex-direction: column
      justify-content: space-between
      align-items: center
      flex-wrap: wrap
      .login__down--input
        .input--title
          font-size: 12px
        .input__box
          height: 30px
          width: 150px
          padding-bottom: 5px
          margin-bottom: 10px
          border: 1px
          border-bottom-style: solid
          display: flex
          .fas
            padding: 10px 10px 0 0
            color: color4
            font-size: 12px 
          input
            border: 0
            border-style: none
            font-size: 12px
      .login__down--button
        height: 30px
        width: 100px
        font-size: 1em 
        color: basicColor1
        background-color: color4
        border-radius: 20px
        text-transform: uppercase
        

@media screen and (min-width: 319px)
    .login__up
      width: 70%

@media screen and (min-width: 423px)
    .login__up
      width: 60%

@media screen and (min-width: 760px)
    .login__up
      width: 30%

@media screen and (min-width: 1020px)
    .login__up
      width: 20%

@media screen and (min-width: 1400px)
    .login__up
      width: 15%