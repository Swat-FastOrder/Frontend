@import '../../stylus/variables.styl'

.login
  background: rgb(39,68,114)
  background: linear-gradient(79deg, rgba(39,68,114,1) 0%, rgba(81,111,159,1) 50%, rgba(39,68,114,1) 100%)
  width: 100%
  height: 100vh
  display: flex
  justify-content: center
  font-family: Font1
  &__error
    background: #E84752;
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    color: white;
    border-radius: 5px
    margin-bottom: 10px
  &__home
    align-self: center
    background: basicColor1
    padding: 30px 10px
    height: 550px
    width: 300px
    border-radius: 20px
    display: flex
    flex-direction: column
    justify-content: flex-start
    align-items: center
    flex-wrap: wrap
    &--up
      margin-top: 30%
      height: auto
      align-self: center
      font-size: 20px
      width: 100%
      .a
        text-align: center
        color:#272C33
        font-size: 1.8rem
      .b
        font-size: inherit
        border-radius: 27px
        display: flex
        justify-content: center
        align-items: center
        letter-spacing: 1px
        margin-top: 2%
        &_1
          font-weight: 100
          font-family: Font2
          color: #41729F
          font-size: 2.5rem
          margin-right: 5px
        &_2
          color: #274472
          text-transform: uppercase
          font-size: 3rem
          font-family: Font3
    .login__down
      margin-top: 40px
      width: 90%
      height: 170px
      display: flex
      flex-direction: column
      justify-content: space-between
      align-items: center
      .login__down--input
        width: 100%
        .input--title
          font-size: 12px
          color: #272C33
        .input__box
          height: 30px
          width: 100%
          padding-bottom: 5px
          margin-bottom: 20px
          border-bottom: 1px solid #27447278
          display: flex
          .fas
            padding: 10px 10px 0 0
            color: color4
            font-size: 12px
          input
            max-width: 200px
            border: 0
            border-style: none
            font-size: 12px
      .login__down--button
        height: 30px
        width: 100px
        margin: 5% 0 30% 0
        font-size: 1em
        width: 80%
        color: #fff
        background-color: #274472
        border: none
        border-radius: 20px
        padding: 5px
        text-transform: uppercase
        cursor: pointer
        font-weight: bold

@media screen and (min-width: 319px)
    .login__up
      width: 70%

@media screen and (min-width: 423px)
    .login__up
      width: 60%

@media screen and (min-width: 760px)
    .login__up
      width: 30%

@media screen and (min-width: 1020px)
    .login__up
      width: 20%

@media screen and (min-width: 1400px)
    .login__up
      width: 15%